{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "declaration": true,
        "moduleResolution": "node"
    },
    "scripts": {
        "compile": "./node_modules/.bin/tsc"
    },
    "exclude": [
        "./node_modules",
        "./dist"
    ],
   
    "include": [
        "**/*.ts"
    ]
}